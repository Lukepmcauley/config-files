"=====VIMrc======
"Luke McAuley
let mapleader = " "
set nocompatible              " be iMproved, required
"===== Vundle Plugins =======
filetype off                  " required

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" let Vundle manage Vundle, required
Plugin 'gmarik/Vundle.vim'
Plugin 'bling/vim-airline'
Plugin 'edkolev/tmuxline.vim'
Plugin 'flazz/vim-colorschemes'
Plugin 'gorkunov/smartpairs.vim'
Plugin 'kien/ctrlp.vim'
Plugin 'klen/python-mode'
Plugin 'tpope/vim-fugitive.git'
Plugin 'tpope/vim-surround'
Plugin 'tpope/vim-vinegar.git'
Plugin 'tpope/vim-commentary'
Plugin 'tpope/vim-dispatch'
Plugin 'tpope/vim-eunuch'
Plugin 'Yggdroot/indentLine'
Plugin 'christoomey/vim-tmux-navigator'
Plugin 'jplaut/vim-arduino-ino'
Plugin 'leafgarland/typescript-vim'
Plugin 'jason0x43/vim-js-indent'
Plugin 'sudar/vim-arduino-syntax'
Plugin 'dahu/Insertlessly'

" Not used atm
"Plugin 'Valloric/YouCompleteMe'
"Plugin 'syntastic'
"Plugin 'godlygeek/tabular'
"Plugin 'jondkinney/dragvisuals.vim'

call vundle#end()            " required
filetype plugin indent on    " required

"=======End of Vundle stuff ====

"======Plugin settings ====

"syntastic
"let g:syntastic_python_pylint_args = '--load-plugins pylint_django'
"let g:syntastic_mode_map = {"mode":"passive"}

"ctrlp.vim
set runtimepath^=~/.vim/bundle/ctrlp.vim

"vim-airline
let g:airline_powerline_fonts = 1
let g:airline_theme='powerlineish'
let g:airline#extensions#tabline#enabled = 1

"tmuxline
let g:tmuxline_preset = 'minimal'


"pymode
let g:pymode_folding = 0
let g:pymode_rope_complete_on_dot = 0
let g:pymode_lint_ignore = "E,W"


""" Mappings

"""insertlessly fi x
nmap <leader>o <Plug>OpenNewline
nmap <leader>s <Plug>InsertSpace


"""Cycle buffers
map <leader>k :bnext<Return>
map <leader>j :bprev<Return>

""" Delete Buffer
map <leader>d :bd<Return>

"""Open folds
"map <leader>o zo
map <leader>O zO
nmap <Leader>f :set fdm=syntax<CR>
""" Resize splits with arrow keys
noremap <Up> :res -5 <CR>
noremap <Down> :res +5 <CR>
noremap <Left> :vertical resize -5<CR>
noremap <Right> :vertical resize +5<CR>

nnoremap <silent> <leader>ch :set hlsearch!<CR>
set pastetoggle=<F2>


""" colorscheme
syntax on
colorscheme molokai
set t_Co=256

""" Tab settings
set tabstop=8 softtabstop=0 expandtab shiftwidth=4 smarttab
"=====Search options
set hlsearch
set ignorecase
set smartcase

""" Misc
au FileType c,cpp setlocal comments-=:// comments+=f://
""set makeprg=gcc\ -o\ %<\ %
set wildmenu
set wildmode=longest:full,full
set laststatus=2
set confirm
set ruler
"""set number
set clipboard=unnamedplus
set hidden
set noswapfile
set nowrap
"""set spell spelllang=en_gb
set scroll=5
let loaded_matchparen = 1

