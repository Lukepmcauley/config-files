"=====VIMrc======
"Luke McAuley
let mapleader = " "
set nocompatible              " be iMproved, required
"===== Vundle Plugins =======
filetype off                  " required

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" let Vundle manage Vundle, required
Plugin 'gmarik/Vundle.vim'

"" tmux related
Plugin 'edkolev/tmuxline.vim'
Plugin 'christoomey/vim-tmux-navigator'

"" File browsing
Plugin 'scrooloose/nerdtree'
Plugin 'kien/ctrlp.vim'

""making things pretty
Plugin 'bling/vim-airline'
Plugin 'flazz/vim-colorschemes'
Plugin 'gorkunov/smartpairs.vim'

"" Programming checkers
" Plugin 'scrooloose/syntastic'
Plugin 'Valloric/YouCompleteMe'

""misc
Plugin 'tpope/vim-surround'
Plugin 'tpope/vim-commentary'
Plugin 'tpope/vim-eunuch'
Plugin 'tpope/vim-repeat'
Plugin 'tpope/vim-sleuth'
Plugin 'tpope/vim-fugitive.git'
Plugin 'Yggdroot/indentLine'
Plugin 'dahu/Insertlessly'
Plugin 'airblade/vim-gitgutter'
Plugin 'tmhedberg/matchit'

""language syntax
Plugin 'groenewege/vim-less'
Plugin 'jelera/vim-javascript-syntax'


" Plugin 'lervag/vimtex'
" Plugin 'derekwyatt/vim-scala'
" Plugin 'Valloric/ListToggle'

call vundle#end()            " required
filetype plugin indent on    " required

"=======End of Vundle stuff ====

"======Plugin settings ====

"ctrlp.vim
set runtimepath^=~/.vim/bundle/ctrlp.vim

"vim-airline
let g:airline_powerline_fonts = 1
let g:airline_theme='powerlineish'
let g:airline#extensions#tabline#enabled = 0

"tmuxline
let g:tmuxline_preset = 'minimal'

""" ctrl-p
let g:ctrlp_custom_ignore = 'node_modules\|DS_Store\|git\|migrations\|generated\'

"========Mappings============"

map <leader>n :NERDTreeToggle<CR>
map <leader>d "_d
nnoremap <silent> <leader>ch :set hlsearch!<CR>

noremap Y y$

""" Resize splits with arrow keys
noremap <Up> :res -5 <CR>
noremap <Down> :res +5 <CR>
noremap <Left> :vertical resize -5<CR>
noremap <Right> :vertical resize +5<CR>

"" Indenting in visual mode
vmap < <gv
vmap > >gv

set pastetoggle=<F12>
autocmd InsertLeave * set nopaste " disable paste mode on leaving insert mode

""" colorscheme
syntax on
colorscheme molokai
set t_Co=256

"=====Search options
set hlsearch
set ignorecase
set smartcase
set incsearch
au FileType c,cpp setlocal comments-=:// comments+=f://
set wildmenu
set wildmode=longest:full,full
set laststatus=2
set confirm
set number
set clipboard=unnamedplus
set hidden
set noswapfile
set nowrap
set lazyredraw                        " don't bother updating screen during macro playback
set nojoinspaces                      " don't autoinsert two spaces after '.', '?', '!' for join command
set mouse=a
set scroll=5
set wildignore+=*.hi,*.pyc,*.o,*.d
set showmatch
hi MatchParen cterm=bold ctermbg=none ctermfg=magenta
